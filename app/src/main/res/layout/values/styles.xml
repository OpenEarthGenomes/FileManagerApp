<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.FileManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/menu_blue</item>
        <item name="colorPrimaryVariant">@color/menu_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/menu_green</item>
        <item name="colorSecondaryVariant">@color/menu_green</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:editTextBackground">@drawable/bg_edittext</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="Theme.FileManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.FileManager.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- Button styles -->
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- CardView style -->
    <style name="RoundedCard" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <!-- TextView style for file names -->
    <style name="FileNameText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- TextView style for file info -->
    <style name="FileInfoText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_card</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>

    <!-- ProgressBar style -->
    <style name="ProgressBarStyle">
        <item name="android:indeterminateTint">@color/menu_blue</item>
    </style>

    <!-- EditText style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
