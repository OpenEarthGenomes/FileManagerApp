<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- App Title -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="File Manager Pro"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Main Menu Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Internal Storage Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/menu_blue"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btn_internal_storage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_storage"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="Internal Storage"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>

        <!-- SD Card Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/menu_green"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btn_sd_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_sd_card"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="SD Card / External"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>

        <!-- Recent Files Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/menu_purple"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btn_recent_files"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_recent"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="Recent Files"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>

        <!-- Settings Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/menu_orange"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_settings"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="Settings"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Footer Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Â© 2024 File Manager Pro v1.0"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

</RelativeLayout>
